<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IngredientsTracker.ShoppingList"
             xmlns:viewmodel="clr-namespace:IngredientsTracker.ViewModels"
             Title="ShoppingList">
    <!-- Bind the page to the ViewModel -->
    <ContentPage.BindingContext>
        <viewmodel:ShoppingListVM />
    </ContentPage.BindingContext>

    <StackLayout>
        <CollectionView ItemsSource="{Binding Items}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="{Binding Item}"/>
                        <Entry Text="{Binding Amount}"/>
                        <Label Text="{Binding Unit}" />
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Label Text="+" />
        <!-- On click, show in the DatTemplate an invidible entry field for new data, then when submit, add to list, and hide entry -->
        <!-- Only allow amount to be two way entry -->
    </StackLayout>
</ContentPage>