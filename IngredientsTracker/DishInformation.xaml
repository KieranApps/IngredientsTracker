<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IngredientsTracker.DishInformation"
             xmlns:viewmodel="clr-namespace:IngredientsTracker.ViewModels"
             Title="DishInformation">
        <!-- Bind the page to the ViewModel -->
        <ContentPage.BindingContext>
            <viewmodel:DishInformationVM />
        </ContentPage.BindingContext>
    <VerticalStackLayout>
        <Label
            x:Name="DishInfoTitle"
            Text="View the Information for this Dish"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
        <Grid
            Grid.Row="0"
            ColumnSpacing="10"
            Padding="15,0,15,20"
        >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.4*" />
                <ColumnDefinition Width="0.4*" />
                <ColumnDefinition Width="0.2*" />
            </Grid.ColumnDefinitions>
            <Entry
                Grid.Row="0"
                Grid.Column="0"
                TextColor="Black"
                Text="{Binding NewIngredient}"
                TextChanged="OnIngredientEntryTextChanged"
                Placeholder="Enter Ingredient"
                PlaceholderColor="DarkGray"
            />
            <Entry
                Grid.Row="0"
                Grid.Column="1"
                TextColor="Black"
                Text="{Binding NewIngredientAmount}"
                Placeholder="Enter Ingredient"
                PlaceholderColor="DarkGray"
            />  
            <Picker
                x:Name="UnitPicker"
                BackgroundColor="Gray"
                Grid.Row="0"
                Grid.Column="2"
                ItemsSource="{Binding Units}"
                ItemDisplayBinding="{Binding .}"
                SelectedItem="{Binding ChosenUnit, Mode=TwoWay}">
            </Picker>

            <Button
                Grid.Row="1"
                Grid.Column="2"
                TextColor="White"
                BackgroundColor="LightBlue"
                FontAttributes="Bold"
                Text="Submit"
            >
                <Button.Shadow>
                    <Shadow Brush="LightBlue"
                        Offset="0,0"
                        Radius="40"
                        Opacity="0.7"
                    />
                </Button.Shadow>
            </Button>
        </Grid>
        
        <!-- Area for saved ingrediets -->
            <Grid
                Grid.Row="1"
                ColumnSpacing="10"
                Padding="15,0,15,20"
            >   
                <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.4*" />
            </Grid.ColumnDefinitions>
            <Entry
                Grid.Row="0"
                Grid.Column="0"
                TextColor="Black"
                Text="Test"
            />
                        <Entry
                Grid.Row="0"
                Grid.Column="0"
                TextColor="Black"
                Text="Test"
            />
                        <Entry
                Grid.Row="1"
                Grid.Column="0"
                TextColor="Black"
                Text="Test"
            />
                        <Entry
                Grid.Row="2"
                Grid.Column="0"
                TextColor="Black"
                Text="Test"
            />
                        <Entry
                Grid.Row="3"
                Grid.Column="0"
                TextColor="Black"
                Text="Test"
            />
                        <Entry
                Grid.Row="4"
                Grid.Column="0"
                TextColor="Black"
                Text="Test"
            />
                        <Entry
                Grid.Row="5"
                Grid.Column="0"
                TextColor="Black"
                Text="Test"
            />
                        <Entry
                Grid.Row="6"
                Grid.Column="0"
                TextColor="Black"
                Text="Test"
            />
                        <Entry
                Grid.Row="7"
                Grid.Column="0"
                TextColor="Black"
                Text="Test"
            />
                        <Entry
                Grid.Row="8"
                Grid.Column="0"
                TextColor="Black"
                Text="Test"
            />
                        <Entry
                Grid.Row="9"
                Grid.Column="0"
                TextColor="Black"
                Text="Test"
            />
            
        </Grid>


            <AbsoluteLayout x:Name="SearchOverlay" InputTransparent="True">
                <CollectionView x:Name="SearchResultsCollectionView"
                    IsVisible="False"

                    BackgroundColor="LightGray"
                    SelectionMode="Single"
                                Grid.RowSpan="2" 
                    Grid.ColumnSpan="3"
                    VerticalOptions="Start"
                    HeightRequest="300"
                >
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Label Text="{Binding Name}" 
                                Padding="10"
                                TextColor="Black">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnResultTapped" />
                                </Label.GestureRecognizers>
                            </Label>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                
            </AbsoluteLayout>
        </Grid>
        
    </VerticalStackLayout>
</ContentPage>