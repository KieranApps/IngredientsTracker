<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IngredientsTracker.Schedule"
             xmlns:viewmodel="clr-namespace:IngredientsTracker.ViewModels"
             Title="Schedule">
    <!-- Bind the page to the ViewModel -->
    <ContentPage.BindingContext>
        <viewmodel:ScheduleVM />
    </ContentPage.BindingContext>
    
    <VerticalStackLayout>
        <Grid RowSpacing="5" ColumnSpacing="5" Padding="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.25*"/>
                <ColumnDefinition Width="0.50*"/>
                <ColumnDefinition Width="0.25*"/>
            </Grid.ColumnDefinitions>
            <Label
                Grid.Column="0"
                TextColor="Black"
                Text="&#xef7d;"
                FontSize="36"
                HorizontalTextAlignment="End"
            />
            <Label
                Grid.Column="1"
                TextColor="Black"
                Text="{Binding monthSelected}"
                FontSize="36"
                HorizontalTextAlignment="Center"
            />
            <Label
                Grid.Column="2"
                TextColor="Black"
                Text="&#xe941;"
                FontSize="36"
                HorizontalTextAlignment="Start"
            />
        </Grid>
    </VerticalStackLayout>
</ContentPage>