<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IngredientsTracker.Schedule"
             xmlns:viewmodel="clr-namespace:IngredientsTracker.ViewModels"
             Title="Schedule">
    <!-- Bind the page to the ViewModel -->
    <ContentPage.BindingContext>
        <viewmodel:ScheduleVM />
    </ContentPage.BindingContext>
    
    <StackLayout>
        <Grid RowSpacing="5" ColumnSpacing="5" Padding="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.25*"/>
                <ColumnDefinition Width="0.50*"/>
                <ColumnDefinition Width="0.25*"/>
            </Grid.ColumnDefinitions>
            <Label
                Grid.Column="0"
                TextColor="Black"
                Text="&#xef7d;"
                FontSize="36"
                HorizontalTextAlignment="End"
            />
            <Label
                Grid.Column="1"
                TextColor="Black"
                Text="{Binding monthSelected}"
                FontSize="36"
                HorizontalTextAlignment="Center"
            />
            <Label
                Grid.Column="2"
                TextColor="Black"
                Text="&#xe941;"
                FontSize="36"
                HorizontalTextAlignment="Start"
            />
        </Grid>
        <CollectionView ItemsSource="{Binding CalendarDays}" VerticalOptions="FillAndExpand">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical"
                Span="2"
                VerticalItemSpacing="10"
                HorizontalItemSpacing="10" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
            <DataTemplate >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.75*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition  Height="Auto"/>
                            <RowDefinition  Height="*"/>
                        </Grid.RowDefinitions>

                        <Label Text="{Binding Date}" Grid.Row="0" Grid.Column="0"/>
                        <Label Text="&#xe3c9;" Grid.Row="0" Grid.Column="1"/>
                        
                        <Frame
                            Grid.Row="1"
                            Grid.ColumnSpan="2"
                            Margin="5"
                            HeightRequest="100"
                        >
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="GoToDish"
                                    CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>
                            <Label Text="{Binding Name}"
                                HorizontalOptions="Center"
                                VerticalOptions="Center"
                            />
                        </Frame>
                    </Grid>
            </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
    </StackLayout>
</ContentPage>